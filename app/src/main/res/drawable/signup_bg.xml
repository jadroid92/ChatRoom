<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/color_state_border_button" />
            <gradient android:angle="-90" android:endColor="@color/endColor_state_normal_button" android:startColor="@color/startColor_state_normal_button" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/color_state_border_button" />
            <solid android:color="@color/startColor_state_pressed_button" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/color_state_border_button" />
            <gradient android:angle="-90" android:endColor="@color/endColor_state_pressed_button" android:startColor="@color/startColor_state_pressed_button" />
        </shape>
    </item>
</selector>